<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Mp02.Signal.Background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/pigeon_small_margin">

    <TextView
        android:id="@+id/new_message_button"
        style="@style/Mp02.Signal.Text.CommonTextButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/pigeon_start_margin"
        android:layout_marginTop="@dimen/pigeon_small_margin"
        android:text="@string/Pigeon_HomePage_new_message" />

    <TextView
        android:id="@+id/new_group_button"
        style="@style/Mp02.Signal.Text.CommonTextButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/pigeon_start_margin"
        android:layout_marginTop="@dimen/pigeon_small_margin"
        android:text="@string/Pigeon_HomePage_new_group" />

    <TextView
        android:id="@+id/mark_all_read_button"
        style="@style/Mp02.Signal.Text.CommonTextButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/pigeon_start_margin"
        android:layout_marginTop="@dimen/pigeon_small_margin"
        android:text="@string/Pigeon_HomePage_mark_all_read" />

    <TextView
        android:id="@+id/settings_button"
        style="@style/Mp02.Signal.Text.CommonTextButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/pigeon_start_margin"
        android:layout_marginTop="@dimen/pigeon_small_margin"
        android:text="@string/Pigeon_HomePage_settings" />

    <TextView
        android:id="@+id/search_button"
        style="@style/Mp02.Signal.Text.CommonTextButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/pigeon_start_margin"
        android:layout_marginTop="@dimen/pigeon_small_margin"
        android:text="@string/Pigeon_HomePage_search" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginStart="@dimen/pigeon_start_margin"
        android:layout_marginTop="@dimen/pigeon_small_margin"
        android:layout_marginEnd="@dimen/pigeon_start_margin"
        android:layout_marginBottom="@dimen/pigeon_small_margin"
        android:background="@color/white" />


</LinearLayout>
