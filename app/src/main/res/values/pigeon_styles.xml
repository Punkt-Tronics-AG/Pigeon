<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Mp02">Mp02</style>

    <style name="Mp02.Signal">Mp02.Signal</style>

    <style name="Mp02.Signal.CustomDialog" parent="@android:style/Theme.NoTitleBar.Fullscreen">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:scrollbars">none</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
    </style>

    <style name="Mp02.Signal.ListTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:defaultFocusHighlightEnabled" tools:targetApi="o">false</item>
        <item name="android:focusable">true</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/mp02_common_text_button</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="Mp02.Signal.TextInputLayout.Registration.Dropdown" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu">
        <item name="android:padding">0dp</item>
        <item name="boxBackgroundColor">@color/black</item>
        <item name="endIconTint">@android:color/transparent</item>
        <item name="boxStrokeColor">@color/focused_text_color</item>
        <item name="boxCollapsedPaddingTop">0dp</item>
    </style>

    <style name="Mp02.Signal.TextInputLayout.Registration" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:padding">0dp</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="colorPrimary">@color/white_focus</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="boxCollapsedPaddingTop">0dp</item>
        <item name="expandedHintEnabled">false</item>
        <item name="helperTextEnabled">false</item>
        <item name="errorEnabled">false</item>
        <item name="hintEnabled">false</item>
    </style>

    <style name="Mp02.Signal.Background">
        <item name="android:background">@color/black</item>
    </style>

    <style name="Mp02.Signal.Text">Mp02.Signal.Text</style>

    <style name="Mp02.Signal.Text.WelcomeTitle">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/white_focus</item>
        <item name="singleLine">false</item>
        <item name="android:defaultFocusHighlightEnabled" tools:ignore="NewApi">false</item>
    </style>

    <style name="Mp02.Signal.Text.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:defaultFocusHighlightEnabled" tools:ignore="NewApi">false</item>
    </style>

    <style name="Mp02.Signal.Text.SubTitle">
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">1sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Mp02.Signal.Text.SmallTextButton">
        <item name="android:textSize">12sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="colorPrimary">@color/white_not_focus</item>
        <item name="android:textColor">@color/mp02_common_text_button</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:defaultFocusHighlightEnabled" tools:ignore="NewApi">false</item>
    </style>

    <style name="Mp02.Signal.Text.CommonTextButton">
        <item name="android:textSize">24sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="colorPrimary">@color/white_not_focus</item>
        <item name="android:textColor">@color/mp02_common_text_button</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:singleLine">true</item>
        <item name="android:focusable">true</item>
        <item name="android:fadingEdge">horizontal</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:defaultFocusHighlightEnabled" tools:ignore="NewApi">false</item>
    </style>

    <style name="Mp02.Signal.Text.CommonTextButton.NoFocus" parent="Mp02.Signal.Text.CommonTextButton">
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
    </style>

    <style name="Mp02.Signal.Text.BigCommonTextButton" parent="Mp02.Signal.Text.CommonTextButton">
        <item name="android:textSize">36sp</item>
    </style>

    <style name="Mp02.Signal.Text.Body" parent="Signal.Text.Body">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Mp02.Signal.Text.Caption" parent="Signal.Text.Caption">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Widget.Pigeon.TextInputLayout.Registration" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxCornerRadiusTopEnd">4dp</item>
        <item name="boxCornerRadiusTopStart">4dp</item>
        <item name="hintTextAppearance">@style/EditTextHint</item>
    </style>

    <style name="EditTextHint" parent="TextAppearance.AppCompat">
        <item name="colorAccent">@android:color/white</item>
        <item name="android:textColorHint">@color/white_not_focus</item>
        <item name="colorControlNormal">@color/white_not_focus</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
    </style>

    <style name="Mp02.Signal.Text.MaterialTextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textSize">24sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/mp02_common_text_button</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:padding">0sp</item>
        <item name="android:lineSpacingExtra">0sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:minWidth">0sp</item>
        <item name="android:minHeight">0sp</item>
        <item name="android:insetTop">0sp</item>
        <item name="android:insetBottom">0sp</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:defaultFocusHighlightEnabled" tools:ignore="NewApi">true</item>
    </style>

    <style name="Mp02.Signal.Text.MaterialTextButtonFocusable" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textSize">24sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/mp02_common_text_button</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:ellipsize">end</item>
        <item name="android:padding">0sp</item>
        <item name="android:lineSpacingExtra">0sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:minWidth">0sp</item>
        <item name="android:minHeight">0sp</item>
        <item name="android:insetTop">0sp</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:insetBottom">0sp</item>
        <item name="android:defaultFocusHighlightEnabled" tools:ignore="NewApi">true</item>
    </style>


    <style name="PigeonComposeEditText" parent="@style/Signal.Text.Body">
        <item name="android:padding">2dp</item>
        <item name="android:background">@null</item>
        <item name="android:maxLines">5</item>
        <item name="android:maxLength">65536</item>
        <item name="android:textColor">@color/mp02_common_text_button</item>
        <item name="android:textColorHint">@color/signal_text_hint</item>
        <item name="android:capitalize">sentences</item>
        <item name="android:textSize">16sp</item>
        <item name="android:autoText">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:imeOptions">flagNoEnterAction</item>
        <item name="android:inputType">textAutoCorrect|textCapSentences|textMultiLine</item>
        <item name="android:contentDescription">@string/conversation_activity__compose_description</item>
    </style>

    <style name="PigeonAlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="android:layout">@layout/abc_alert_dialog_material</item>
        <item name="listLayout">@layout/abc_select_dialog_material</item>
        <item name="listItemLayout">@layout/select_dialog_item_material</item>
        <item name="multiChoiceItemLayout">@layout/select_dialog_multichoice_material</item>
        <item name="singleChoiceItemLayout">@layout/pigeon_select_dialog_singlechoice_material</item>
        <item name="buttonIconDimen">@dimen/abc_alert_dialog_button_dimen</item>
    </style>

    <style name="Pigeon.MaterialAlertDialog" parent="@style/ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="alertDialogStyle">@style/Pigeon.MaterialAlertDialogStyle</item>
        <item name="android:dialogCornerRadius" tools:ignore="NewApi">28dp</item>
        <item name="materialAlertDialogTitleTextStyle">@style/MaterialAlertDialog.Signal.Title.Text</item>
        <item name="materialAlertDialogBodyTextStyle">@style/MaterialAlertDialog.Signal.Body.Text</item>
        <item name="buttonBarPositiveButtonStyle">@style/Signal.Widget.Button.Dialog</item>
        <item name="buttonBarNeutralButtonStyle">@style/Signal.Widget.Button.Dialog</item>
        <item name="buttonBarNegativeButtonStyle">@style/Signal.Widget.Button.Dialog</item>
        <item name="textColorAlertDialogListItem">@color/signal_colorOnSurfaceVariant</item>
        <item name="android:checkedTextViewStyle">@style/Widget.Signal.CheckedTextView</item>
    </style>

    <style name="Pigeon.MaterialAlertDialogStyle" parent="MaterialAlertDialog.Material3">
        <item name="singleChoiceItemLayout">@layout/pigeon_select_dialog_singlechoice_material</item>
        <item name="shapeAppearance">@style/Signal.ShapeOverlay.Rounded</item>
    </style>

    <style name="Button.Borderless" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">?attr/colorAccent</item>
    </style>

    <style name="Signal.MessageRequest.Button" parent="Button.Borderless">
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/message_request_button_background</item>
    </style>

    <style name="Signal.MessageRequest.Button.Deny">
        <item name="android:textColor">@color/core_red</item>
    </style>

    <style name="Signal.MessageRequest.Button.Accept">
        <item name="android:textColor">@color/core_ultramarine</item>
    </style>

</resources>